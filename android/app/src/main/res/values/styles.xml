<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/primary</item>
        <item name="colorSecondaryVariant">@color/primary_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/primary</item>
        
        <!-- Navigation bar color -->
        <item name="android:navigationBarColor">@color/primary</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/primary_dark</item>
    </style>

    <!-- Message bubble styles -->
    <style name="MessageBubble">
        <item name="android:padding">12dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:maxWidth">280dp</item>
    </style>

    <style name="MessageBubble.Sent">
        <item name="android:background">@drawable/bg_message_sent</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MessageBubble.Received">
        <item name="android:background">@drawable/bg_message_received</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>